<AnchorPane fx:id="anchor" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.PaymentsController">
    <children>
        <BorderPane>
            <top>
                <AnchorPane prefHeight="50.0" prefWidth="942.0" BorderPane.alignment="CENTER">
                    <children>
                        <DatePicker fx:id="dateFilter" layoutX="56.0" layoutY="34.0" style="-fx-background-color: #343742;" />
                  <HBox alignment="CENTER" layoutX="275.0" layoutY="-2.0" prefHeight="100.0" prefWidth="200.0" spacing="25.0">
                     <children>
                        <Button minHeight="27.0" minWidth="100.0" mnemonicParsing="false" onAction="#onSearchAction" text="Search" />
                        <Button minHeight="27.0" minWidth="100.0" mnemonicParsing="false" onAction="#onRefreshAction" text="Refresh" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
                    </children>
                </AnchorPane>
            </top>
            <center>
                <TableView fx:id="paymentsTableView" prefHeight="500.0" prefWidth="800.0" BorderPane.alignment="CENTER">
                    <columns>
                        <TableColumn fx:id="paymentIdCol" prefWidth="116.79998475313187" text="Payment Id" />
                        <TableColumn fx:id="firstNameCol" prefWidth="148.80003356933594" text="FirstName" />
                        <TableColumn fx:id="lastNameCol" prefWidth="151.199951171875" text="LastName" />
                        <TableColumn fx:id="dateCol" minWidth="0.0" prefWidth="111.99993896484375" text="Date" />
                        <TableColumn fx:id="priceCol" minWidth="0.0" prefWidth="148.79998779296875" text="Price" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </center>
            <bottom>
                <HBox alignment="CENTER_RIGHT" prefWidth="729.0" BorderPane.alignment="CENTER_RIGHT">
                    <children>
                        <Button alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#onPayPaymentAction" text="Pay and check details">
                            <HBox.margin>
                                <Insets right="10.0" />
                            </HBox.margin>
                        </Button>
                  <Button mnemonicParsing="false" onAction="#onCancleAction" text="Cancel" />
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding></HBox>
            </bottom>
        </BorderPane>
    </children>
