<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <VBox prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                    <children>
                        <Label text="Check in">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </padding>
                            <font>
                                <Font size="14.0" />
                            </font></Label>
                        <DatePicker fx:id="check" style="-fx-background-color: #343742;" />
                        <Label text="Check out">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </padding>
                            <font>
                                <Font size="14.0" />
                            </font></Label>
                        <DatePicker fx:id="lastDatePickerField" style="-fx-background-color: #343742;" />
                        <ChoiceBox fx:id="roomTypeSelector" prefWidth="100.0">
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                        </ChoiceBox>
                        <Button fx:id="findButtonId" mnemonicParsing="false" onAction="#onFindAction" text="Find">
                            <HBox.margin>
                                <Insets left="5.0" />
                            </HBox.margin>
                            <font>
                                <Font size="14.0" />
                            </font></Button>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <TableView fx:id="tableView" fixedCellSize="0.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="448.0" prefWidth="666.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="roomNumberCol" maxWidth="1.7976931348623157E308" prefWidth="106.39999389648438" resizable="false" style="-fx-alignment: center; -fx-background-color: transparent;" text="Room Number" />
                <TableColumn fx:id="roomFloorCol" maxWidth="1.7976931348623157E308" minWidth="0.0" prefWidth="106.39996337890625" resizable="false" style="-fx-alignment: center; -fx-background-color: transparent;" text="Room Floor" />
                <TableColumn fx:id="capacityCol" maxWidth="1.7976931348623157E308" minWidth="0.0" resizable="false" style="-fx-alignment: center; -fx-background-color: transparent;" text="Capacity" />
                <TableColumn fx:id="bedNumberCol" maxWidth="1.7976931348623157E308" minWidth="0.0" prefWidth="121.5999755859375" resizable="false" style="-fx-alignment: center; -fx-background-color: transparent;" text="Number of beds " />
                <TableColumn fx:id="roomTypeCol" maxWidth="1.7976931348623157E308" minWidth="0.0" prefWidth="114.4000244140625" resizable="false" style="-fx-alignment: center; -fx-background-color: transparent;" text="Room Type" />
                <TableColumn fx:id="priceCol" maxWidth="1.7976931348623157E308" prefWidth="106.0" resizable="false" style="-fx-alignment: center; -fx-background-color: transparent;" text="Price" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <right>
        <VBox alignment="TOP_CENTER" prefHeight="441.0" prefWidth="133.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="makeReservation" mnemonicParsing="false" onAction="#onMakeReservationAction" text="Make Reservation">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </Button>
                <Button fx:id="cancelButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onCancleAction" text="Cancel">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="10.0" />
                    </VBox.margin>
                </Button>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </VBox>
    </right>
</BorderPane>
